<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/item_message_bg"
    android:clickable="true"
    android:orientation="horizontal">

    <com.brioal.circleimage.CircleImageView
        android:id="@+id/item_friend_tv_head"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_head_default"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_friend_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="19sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_friend_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="最近一条消息"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>